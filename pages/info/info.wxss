/* pages/info/info.wxss */
.container {
  width: 100%;
  height: 100%;
}
.userform {
  padding-top: 15rpx;
  background: #f5f5f5;
}
.userform .baseinfo {
  width: 100%;
  padding: 0 30rpx;
  background: #fff;
}
.userform .student, .graduate {
  margin: 15rpx 0;
  width: 100%;
  padding: 0 30rpx;
  background: #fff;
}
.userform .form-item {
  display: flex;
  height: 100rpx;
  margin-right: 30rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #333;
  border-bottom: 1rpx solid #f9f9f9;
}
.userform .form-item label {
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #777;
}
.form-item label radio:last-child {
  margin-left: 20rpx;
}
.userform .form-item input {
  color: #777;
  font-size: 30rpx;
  padding-right: 30rpx;
  text-align: right;
}
.userform .form-item .placeholder {
  font-size: 28rpx;
  color: #aaa;
  text-align: right;
}

/* 简介 */
.userform .brief {
  padding: 0 30rpx;
  background: #fff;
}
.userform .brief text {
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #333;
}
.userform .brief textarea {
  width: 100%;
  height: 200rpx;
  margin-top: -10rpx;
  color: #777;
  font-size: 30rpx;
}
.userform .brief .placeholder {
  font-size: 28rpx;
  color: #aaa;
} 
